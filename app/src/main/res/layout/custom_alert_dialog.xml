<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/addCategories"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:text="Add Categorie"
        android:layout_marginTop="8sp"
        android:textSize="24dp"
        android:textStyle="bold" />
    <View
        android:id="@+id/viewOneAlert"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addCategories"
        android:background="#ACA9A9" />
    <TextView
        android:id="@+id/addProduct"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dip"
        android:textAlignment="center"
        android:layout_marginTop="8sp"
        android:text="Add Product"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/viewOneAlert"
        android:textSize="24dp"
        android:textStyle="bold" />
    <View
        android:id="@+id/viewTwoAlert"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/addProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#ACA9A9" />

</androidx.constraintlayout.widget.ConstraintLayout>